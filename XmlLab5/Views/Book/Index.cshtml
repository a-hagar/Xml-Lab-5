@model IEnumerable<XmlLab5.Models.Book>
@{
    ViewData["Title"] = "Book";
}

<h1>Books</h1>

<a class="btn btn-default" asp-action="Create">Create Book</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Author Title</th>
            <th>First Name</th>
            <th>Middle Name</th>
            <th>Last Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(m => item.id)</td>
                <td>@Html.DisplayFor(m => item.title)</td>
                <td>@Html.DisplayFor(m => item.authorTitle)</td>
                <td>@Html.DisplayFor(m => item.firstname)</td>
                <td>@Html.DisplayFor(m => item.middlename)</td>
                <td>@Html.DisplayFor(m => item.lastname)</td>
            </tr>
        }
    </tbody>
</table>

